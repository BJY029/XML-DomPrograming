public class JTreePrintFrame {

	private JFrame frame;

	public JTreePrintFrame() {
		initialize();
	}

	public void setVisible(boolean b) {
		frame.setVisible(b);
	}

	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 450, 300);
		//frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		frame.setLocationRelativeTo(null);
		
		DefaultMutableTreeNode rootNode = DOMTreeBuilder.buildTree(FileData.document.getDocumentElement());
		
		JScrollPane scrollPane = new JScrollPane();
		scrollPane.setBounds(12, 10, 410, 241);
		frame.getContentPane().add(scrollPane);
		
		JTree tree = new JTree(rootNode);
		scrollPane.setColumnHeaderView(tree);
		
	}
}
